                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                            LoadSetup(getglobal("RaidSetupFrame_Instance").selectedValue, getglobal("RaidSetupFrame_Boss").selectedValue)
                    </OnClick>
                    <OnShow>
                            this:SetFrameLevel( (this:GetParent()):GetFrameLevel() + 1 );
                    </OnShow>
                </Scripts>
            </Button>
            <Button name="$parent_Build" inherits="OptionsButtonTemplate" text="Build Group">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="380" y="-15"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                            BuildRaid2()
                    </OnClick>
                    <OnShow>
                            this:SetFrameLevel( (this:GetParent()):GetFrameLevel() + 1 );
                    </OnShow>
                </Scripts>
                <Frames>
                    <CheckButton name="$parent_Auto" inherits="OptionsCheckButtonTemplate" checked="false">
                        <Anchors>
                            <Anchor point="RIGHT">
                                <Offset>
                                    <AbsDimension x="25" y="0"></AbsDimension>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    if(this:GetChecked()) then
                                        RaidSetupFrame_Build:SetText("Auto build")
                                        RaidSetupFrame_Build:Disable()
                                    else
                                        RaidSetupFrame_Build:SetText("Build group")
                                        RaidSetupFrame_Build:Enable()
                                    end
                            </OnClick>
                            <OnShow>this:SetFrameLevel( (this:GetParent()):GetFrameLevel() )</OnShow>
                        </Scripts>
                    </CheckButton>
                </Frames>
            </Button>
            <Button name="$parent_ResetDB" inherits="OptionsButtonTemplate" text="Reset DB">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
